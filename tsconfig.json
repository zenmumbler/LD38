{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "rootDir": "src",
        "outFile": "build/ld38.js",

        "noEmitOnError": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
 
        "removeComments": true,
        "sourceMap": false,

        "lib": ["es5", "dom", "es2015", "es2016", "es2017"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": false
     },
    "exclude": [
        "build",
        "data",
        "sources"
    ]
}
